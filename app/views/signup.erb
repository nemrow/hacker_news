<div class="container">
  <div class="container_padding">
    <h1>Sign Up!</h1>
    <% if @errors %>
      <%= erb :_errors, locals: {errors: @errors} %>
    <% end %>

    <div id="signup">
      <form action="/signup" method="post" class="form">
        <input type="text" placeholder="Name" id="name" name="user[name]"><br>
        <input type="text" placeholder="Email" id="email" name="user[email]"><br>
        <input type="text" placeholder="Passowrd" id="password" name="user[password]"><br>
        <input type="text" placeholder="Confirm Password" id="password_confirmation" name="user[password_confirmation]"><br>
        <input type="submit" value="Add Yo'self" class="submit-button">
      </form>
    </div>
  </div>
