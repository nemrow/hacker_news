<a href ="<%= @post.link_url %>"><%= @post.title %></a>
<p>comment count: <%= @comments.count %></p>

<form method="post" action="/post/<%= @post.id %>/comments/new">
	<textarea name="text" placeholder="insert comment"></textarea>
	<input type="submit" value="add comment">
</form>

<table>
<% @comments.each do |comment| %>
	<tr>
		<td><%= comment.user_id %></td>
		<td><%= comment.text %></td>
	</tr>
<% end %>
</table>